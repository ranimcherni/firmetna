{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    {% if not form.vars.valid %}
        <div class="alert alert-danger shadow-sm rounded-3">
            <i class="fas fa-exclamation-circle me-2"></i> Veuillez corriger les erreurs ci-dessous.
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="row g-4">
        <div class="col-md-6">
            {{ form_row(form.prenom, {'attr': {'class': 'form-control rounded-pill px-3'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.nom, {'attr': {'class': 'form-control rounded-pill px-3'}}) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.email, {'attr': {'class': 'form-control rounded-pill px-3'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.roleType, {'attr': {'class': 'form-select rounded-pill px-3'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.telephone, {'attr': {'class': 'form-control rounded-pill px-3', 'placeholder': '+216 -- --- ---'}}) }}
        </div>
        <div class="col-md-12">
            <div class="form-check form-switch mt-2">
                {{ form_widget(form.facialRecognitionEnabled, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.facialRecognitionEnabled, null, {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                {{ form_errors(form.facialRecognitionEnabled) }}
            </div>
            <small class="text-muted d-block ms-4 mt-1">Permet de vous connecter rapidement avec votre visage.</small>
        </div>
    </div>

    <div class="mt-5 d-grid">
        <button type="submit" class="btn btn-success btn-lg rounded-pill fw-bold shadow-sm">
            <i class="fas fa-save me-2"></i> {{ button_label|default('Enregistrer les modifications') }}
        </button>
    </div>
{{ form_end(form) }}
