{% extends 'base.html.twig' %}

{% block title %}Mon Profil - FIRMETNA{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="bg-success p-4 text-white text-center">
                    <div class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center text-success mb-3" style="width: 100px; height: 100px;">
                        <i class="fas fa-user fa-4x"></i>
                    </div>
                    <h2 class="fw-bold mb-0">{{ user.prenom }} {{ user.nom }}</h2>
                    <p class="mb-0 opacity-75">{{ user.roleType|default('Utilisateur') }}</p>
                </div>
                
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-sm-4 fw-bold text-muted">Prénom & Nom</div>
                        <div class="col-sm-8 fw-bold">{{ user.prenom }} {{ user.nom }}</div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-sm-4 fw-bold text-muted">Email</div>
                        <div class="col-sm-8"><i class="fas fa-envelope text-muted me-1"></i> {{ user.email }}</div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-sm-4 fw-bold text-muted">Rôle</div>
                        <div class="col-sm-8">
                            <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">
                                {{ user.roleType|default('Utilisateur') }}
                            </span>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-sm-4 fw-bold text-muted">Téléphone</div>
                        <div class="col-sm-8"><i class="fas fa-phone text-muted me-1"></i> {{ user.telephone|default('Non renseigné') }}</div>
                    </div>
                    
                    {% if publicationsCount is defined %}
                        <div class="row mb-4 mt-4 pt-4 border-top">
                            <div class="col-12">
                                <h5 class="fw-bold mb-3">
                                    <i class="fas fa-file-alt text-success me-2"></i>Mes Publications
                                </h5>
                                <p class="text-muted mb-3">
                                    Vous avez créé <strong>{{ publicationsCount }}</strong> publication{{ publicationsCount > 1 ? 's' : '' }} sur le forum.
                                </p>
                                <a href="{{ path('app_forum_my_posts') }}" class="btn btn-success rounded-pill px-4">
                                    <i class="fas fa-list me-2"></i>Voir toutes mes publications
                                </a>
                                <a href="{{ path('app_forum_new') }}" class="btn btn-outline-success rounded-pill px-4">
                                    <i class="fas fa-plus me-2"></i>Nouvelle publication
                                </a>
                            </div>
                        </div>
                    {% endif %}

                    <div class="d-flex flex-wrap justify-content-between align-items-center mt-4 pt-4 border-top gap-3">
                        <div class="d-flex flex-wrap gap-2">
                            <a href="{{ path('app_profil_edit', {'id': user.id}) }}" class="btn btn-success rounded-pill px-4">
                                <i class="fas fa-edit me-1"></i> Modifier mes informations
                            </a>
                            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary rounded-pill px-4">
                                Retour à l'accueil
                            </a>
                        </div>
                        <div class="ms-auto">
                            {{ include('profil/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
