{% extends 'base.html.twig' %}

{% block title %}Évènements - FIRMETNA{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f3f0ff;
        background-image: linear-gradient(rgba(243, 240, 255, 0.9), rgba(243, 240, 255, 0.9)), url('https://images.unsplash.com/photo-1499002238440-d264edd596ec?auto=format&fit=crop&q=80&w=2000');
        background-size: cover;
        background-attachment: fixed;
    }
    .glass-card {
        background: rgba(255, 255, 255, 0.85) !important;
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.4) !important;
        border-radius: 20px;
    }
    .event-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 16px;
        overflow: hidden;
        border-left: 5px solid #1a4d2e;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }
    .event-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.12);
    }
    .event-card-img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        background: #e9ecef;
    }
    .form-error-message,
    .form-errors,
    .invalid-feedback {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<div class="container-fluid" style="min-height: 100vh; padding-top: 100px;">
    <div class="container py-5">
        <div class="text-center mb-5">
            <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary bg-opacity-10 text-primary mb-3" style="width: 80px; height: 80px;">
                <i class="fas fa-calendar-alt fa-2x"></i>
            </div>
            <h1 class="display-5 fw-bold text-dark mb-2">Évènements</h1>
            <p class="lead text-muted">Participez à nos foires, ateliers et rencontres agricoles.</p>
        </div>

        <div class="glass-card shadow-sm p-4 mb-4">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Date de début</label>
                    <input type="date" name="from" value="{{ from ?? '' }}" class="form-control">
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Date de fin</label>
                    <input type="date" name="to" value="{{ to ?? '' }}" class="form-control">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-success w-100 mt-3 mt-md-0" style="background-color: #1a4d2e; border: none;">
                        <i class="fas fa-filter me-2"></i> Filtrer par date
                    </button>
                </div>
            </form>
        </div>

        {% if events is empty %}
            <div class="glass-card shadow-sm p-5 text-center">
                <i class="fas fa-calendar-times fa-4x text-muted mb-3 opacity-50"></i>
                <h3 class="fw-bold text-dark mb-2">Aucun évènement pour le moment</h3>
                <p class="text-muted mb-4">Les prochains évènements seront affichés ici.</p>
                <a href="{{ path('app_front_dashboard') }}" class="btn btn-primary rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i> Retour au tableau de bord
                </a>
            </div>
        {% else %}
            <div class="row g-4">
                {% for event in events %}
                <div class="col-md-6 col-lg-4">
                    <div class="event-card h-100 d-flex flex-column">
                        <div class="position-relative">
                            {% if event.lieu and event.lieu.image %}
                                <img src="{{ asset(event.lieu.image) }}" alt="{{ event.lieu.ville }}" class="event-card-img">
                            {% else %}
                                <div class="event-card-img d-flex align-items-center justify-content-center text-muted">
                                    <i class="fas fa-map-marker-alt fa-3x opacity-25"></i>
                                </div>
                            {% endif %}
                            <button type="button" class="btn btn-light btn-sm position-absolute shadow" style="top: 10px; right: 10px; border-radius: 50%; width: 38px; height: 38px; display: flex; align-items: center; justify-content: center;" data-bs-toggle="modal" data-bs-target="#qrModal{{ event.id }}" title="Voir le QR Code">
                                <i class="fas fa-qrcode text-primary"></i>
                            </button>
                        </div>
                        <div class="p-3 flex-grow-1 d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="fw-bold text-dark mb-0">{{ event.nom }}</h5>
                            <span class="badge rounded-pill text-white" style="background-color: #1a4d2e; font-size: 0.75rem;">
                                {{ event.date|date('d/m/Y') }}
                            </span>
                        </div>
                        <p class="text-muted small mb-2">
                            <i class="fas fa-clock me-1"></i> {{ event.date|date('H:i') }}
                        </p>
                        {% if event.lieu %}
                            <p class="text-muted small mb-1">
                                <i class="fas fa-map-marker-alt me-1"></i> {{ event.lieu.ville }} — {{ event.lieu.adresse }}
                            </p>
                        {% endif %}
                        {% if event.organisateur %}
                            <p class="text-muted small mb-2">
                                <i class="fas fa-user me-1"></i> {{ event.organisateur }}
                            </p>
                        {% endif %}

                        {# Bouton Détails au lieu d'afficher la description directement #}
                        <div class="d-flex gap-2 mt-auto">
                            <button type="button" class="btn btn-outline-primary btn-sm rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#detailModal{{ event.id }}">
                                <i class="fas fa-info-circle me-1"></i> Détails
                            </button>

                            {% set isParticipant = false %}
                            {% if app.user and event.participations is defined %}
                                {% for participation in event.participations %}
                                    {% if participation.user and participation.user.id == app.user.id %}
                                        {% set isParticipant = true %}
                                    {% endif %}
                                {% endfor %}
                            {% endif %}

                            {% if not app.user %}
                                <a href="{{ path('app_login') }}" class="btn btn-outline-success btn-sm rounded-pill px-3">
                                    <i class="fas fa-sign-in-alt me-1"></i> Se connecter
                                </a>
                            {% else %}
                                {% if isParticipant %}
                                    <a href="{{ path('app_events_annuler_participation', { id: event.id }) }}" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                        <i class="fas fa-times-circle me-1"></i> Annuler
                                    </a>
                                {% else %}
                                    <a href="{{ path('app_events_participer', { id: event.id }) }}" class="btn btn-success btn-sm rounded-pill px-3">
                                        <i class="fas fa-check-circle me-1"></i> Participer
                                    </a>
                                {% endif %}
                            {% endif %}
                        </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

{# Modal Détails pour chaque événement #}
{% for event in events %}
<div class="modal fade" id="detailModal{{ event.id }}" tabindex="-1" aria-labelledby="detailModalLabel{{ event.id }}" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow" style="border-radius: 16px;">
            <div class="modal-header border-0 pb-0" style="background: linear-gradient(135deg, #1a4d2e, #2d7a4a); border-radius: 16px 16px 0 0;">
                <h5 class="modal-title text-white fw-bold" id="detailModalLabel{{ event.id }}">
                    <i class="fas fa-calendar-alt me-2"></i>{{ event.nom }}
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body p-4">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-clock text-primary me-2"></i>
                        <strong>Date :</strong> {{ event.date|date('d/m/Y à H:i') }}
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-user text-success me-2"></i>
                        <strong>Organisateur :</strong> {{ event.organisateur ?: 'Non défini' }}
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-map-marker-alt text-danger me-2"></i>
                        <strong>Lieu :</strong>
                        {% if event.lieu %}
                            {{ event.lieu.ville }} — {{ event.lieu.adresse }}
                        {% else %}
                            Non défini
                        {% endif %}
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-users text-info me-2"></i>
                        <strong>Participants :</strong> {{ event.participations|length }}
                    </li>
                </ul>
                {% if event.description %}
                    <hr>
                    <h6 class="fw-bold"><i class="fas fa-align-left me-2"></i>Description</h6>
                    <p class="text-muted">{{ event.description }}</p>
                {% endif %}
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endfor %}

{# Modal QR Code pour chaque événement #}
{% for event in events %}
<div class="modal fade" id="qrModal{{ event.id }}" tabindex="-1" aria-labelledby="qrModalLabel{{ event.id }}" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content border-0 shadow" style="border-radius: 16px;">
            <div class="modal-header border-0 pb-0" style="background: linear-gradient(135deg, #1a4d2e, #2d7a4a); border-radius: 16px 16px 0 0;">
                <h5 class="modal-title text-white fw-bold" id="qrModalLabel{{ event.id }}">
                    <i class="fas fa-qrcode me-2"></i>{{ event.nom }}
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body p-4 text-center">
                <img src="{{ path('app_events_qrcode', {'id': event.id}) }}" alt="QR Code" class="img-fluid" style="max-width: 250px; border-radius: 8px; border: 2px solid #e9ecef;">
                <p class="text-muted small mt-3 mb-0">Scannez ce QR Code pour voir toutes les informations de l'événement</p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endfor %}

{% endblock %}
