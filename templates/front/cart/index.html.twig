{% extends 'base.html.twig' %}

{% block title %}Mon Panier - FIRMETNA{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h2 class="h4 mb-0 text-success"><i class="fas fa-shopping-cart me-2"></i>Mon Panier</h2>
                </div>
                <div class="card-body">
                    {% if items|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Produit</th>
                                        <th>Prix</th>
                                        <th>Quantité</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in items %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if item.produit.imageUrl %}
                                                        <img src="{{ item.produit.imageUrl }}" alt="{{ item.produit.nom }}" class="rounded-3 me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                    {% else %}
                                                        <div class="bg-light rounded-3 me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                            <i class="fas fa-leaf text-muted"></i>
                                                        </div>
                                                    {% endif %}
                                                    <div>
                                                        <h6 class="mb-0">{{ item.produit.nom }}</h6>
                                                        <small class="text-muted">{{ item.produit.type|capitalize }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>{{ item.produit.prix }} €</td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <a href="{{ path('cart_remove', {uniqueId: item.uniqueId}) }}" class="btn btn-sm btn-outline-secondary rounded-circle" style="width: 25px; height: 25px; display: flex; align-items: center; justify-content: center; padding: 0;">
                                                        <i class="fas fa-minus small"></i>
                                                    </a>
                                                    <span class="fw-bold px-1">{{ item.quantity }}</span>
                                                    <a href="{{ path('cart_increase', {uniqueId: item.uniqueId}) }}" class="btn btn-sm btn-outline-secondary rounded-circle" style="width: 25px; height: 25px; display: flex; align-items: center; justify-content: center; padding: 0;">
                                                        <i class="fas fa-plus small"></i>
                                                    </a>
                                                </div>
                                                {% if item.address or item.comment %}
                                                    <div class="mt-2 small text-muted">
                                                        {% if item.address %}<div><i class="fas fa-map-marker-alt me-1"></i> {{ item.address }}</div>{% endif %}
                                                        {% if item.comment %}<div><i class="fas fa-comment-dots me-1"></i> {{ item.comment }}</div>{% endif %}
                                                    </div>
                                                {% endif %}
                                            </td>
                                            <td class="fw-bold text-success">{{ (item.produit.prix * item.quantity)|number_format(2, ',', ' ') }} €</td>
                                            <td>
                                                <a href="{{ path('cart_delete', {uniqueId: item.uniqueId}) }}" class="btn btn-sm btn-outline-danger border-0">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-basket fa-4x text-muted mb-4"></i>
                            <h4 class="text-muted">Votre panier est vide</h4>
                            <p class="mb-4">Commencez à faire vos courses sur notre marketplace !</p>
                            <a href="{{ path('app_products') }}" class="btn btn-success px-4 rounded-pill">Explorer les produits</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4 fw-bold">Résumé de la commande</h5>
                    <div class="d-flex justify-content-between mb-3 h5">
                        <span>Total</span>
                        <span class="text-success fw-bold">{{ total|number_format(2, ',', ' ') }} €</span>
                    </div>
                    <hr>
                    <p class="small text-muted mb-4">
                        <i class="fas fa-info-circle me-1"></i> 
                        Les frais de livraison seront calculés lors de l'étape suivante.
                    </p>
                    <a href="{{ path('cart_checkout') }}" class="btn btn-success w-100 py-3 rounded-pill fw-bold {{ items|length == 0 ? 'disabled' : '' }}">
                        Valider la commande <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
