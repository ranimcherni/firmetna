{% extends 'base.html.twig' %}

{% block title %}Dashboard Statistiques - FIRMETNA{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }
    .dashboard-header {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: 1px solid rgba(0,0,0,0.05);
    }
    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.06);
        border: 1px solid rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        height: 100%;
    }
    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.12);
    }
    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    .stat-icon.products {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
    }
    .stat-icon.commands {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }
    .stat-icon.revenue {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
    }
    .stat-icon.stock {
        background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        color: white;
    }
    .stat-number {
        font-size: 2rem;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 0.5rem;
    }
    .stat-label {
        color: #6b7280;
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .chart-container {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.06);
        border: 1px solid rgba(0,0,0,0.05);
        margin-bottom: 2rem;
    }
    .chart-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 1.5rem;
    }
    .progress-bar {
        height: 8px;
        border-radius: 4px;
        background: #e5e7eb;
        overflow: hidden;
        margin-top: 0.5rem;
    }
    .progress-fill {
        height: 100%;
        border-radius: 4px;
        transition: width 0.3s ease;
    }
    .badge-stat {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.875rem;
    }
    .back-button {
        display: inline-flex;
        align-items: center;
        color: #6c757d;
        text-decoration: none;
        font-weight: 500;
        margin-bottom: 1rem;
        transition: all 0.3s;
        padding: 0.5rem 1rem;
        border-radius: 10px;
    }
    .back-button:hover {
        color: #495057;
        background: #f8f9fa;
    }
</style>

<div class="container py-4">
    <!-- Header -->
    <div class="dashboard-header">
        <a href="{{ path('app_products') }}" class="back-button">
            <i class="fas fa-arrow-left me-2"></i> Retour aux produits
        </a>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="fw-bold mb-2">Tableau de Bord</h1>
                <p class="text-muted mb-0">Statistiques des produits et des commandes</p>
            </div>
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon products">
                    <i class="fas fa-chart-line"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon products">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-number">{{ productStats.totalProducts }}</div>
                <div class="stat-label">Total Produits</div>
                <div class="mt-3">
                    <small class="text-muted">Végétaux: {{ productStats.vegetableCount }}</small><br>
                    <small class="text-muted">Animaux: {{ productStats.animalCount }}</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon commands">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="stat-number">{{ commandStats.totalCommands }}</div>
                <div class="stat-label">Total Commandes</div>
                <div class="mt-3">
                    {% for status, count in commandStats.statsByStatus %}
                        <small class="text-muted">{{ status }}: {{ count }}</small><br>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon revenue">
                    <i class="fas fa-euro-sign"></i>
                </div>
                <div class="stat-number">{{ commandStats.totalRevenue|number_format(2, ',', ' ') }} €</div>
                <div class="stat-label">Revenu Total</div>
                <div class="mt-3">
                    <small class="text-muted">Moyenne: {{ commandStats.avgRevenue|number_format(2, ',', ' ') }} €</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon stock">
                    <i class="fas fa-warehouse"></i>
                </div>
                <div class="stat-number">{{ productStats.totalStock }}</div>
                <div class="stat-label">Stock Total</div>
                <div class="mt-3">
                    <small class="text-muted">Moyenne: {{ productStats.avgStock }}</small><br>
                    <small class="text-danger">Rupture: {{ productStats.outOfStockCount }}</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Distribution & Command Stats -->
    <div class="row">
        <div class="col-md-6">
            <div class="chart-container">
                <h3 class="chart-title">
                    <i class="fas fa-chart-pie me-2 text-success"></i>
                    Répartition des Produits
                </h3>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Produits Végétaux</span>
                        <span class="badge-stat bg-success">{{ productStats.vegetableCount }}</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill bg-success" style="width: {{ (productStats.vegetableCount / productStats.totalProducts * 100)|round(0) }}%"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Produits Animaux</span>
                        <span class="badge-stat bg-danger">{{ productStats.animalCount }}</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill bg-danger" style="width: {{ (productStats.animalCount / productStats.totalProducts * 100)|round(0) }}%"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Produits Bio</span>
                        <span class="badge-stat bg-success">{{ productStats.bioCount }}</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill bg-success" style="width: {{ (productStats.bioCount / productStats.totalProducts * 100)|round(0) }}%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="chart-container">
                <h3 class="chart-title">
                    <i class="fas fa-chart-line me-2 text-info"></i>
                    Statistiques des Commandes
                </h3>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Commandes En Attente</span>
                        <span class="badge-stat bg-warning">{{ commandStats.statsByStatus['En attente'] ?? 0 }}</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Commandes Confirmées</span>
                        <span class="badge-stat bg-info">{{ commandStats.statsByStatus['Confirmée'] ?? 0 }}</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Commandes Expédiées</span>
                        <span class="badge-stat bg-primary">{{ commandStats.statsByStatus['Expédiée'] ?? 0 }}</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Commandes Livrées</span>
                        <span class="badge-stat bg-success">{{ commandStats.statsByStatus['Livrée'] ?? 0 }}</span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Commandes Annulées</span>
                        <span class="badge-stat bg-danger">{{ commandStats.statsByStatus['Annulée'] ?? 0 }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
