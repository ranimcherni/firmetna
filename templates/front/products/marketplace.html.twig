{% extends 'base.html.twig' %}

{% block title %}{{ category }} - FIRMETNA{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }
    .page-header {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: 1px solid rgba(0,0,0,0.05);
    }
    .back-button {
        display: inline-flex;
        align-items: center;
        color: #6c757d;
        text-decoration: none;
        font-weight: 500;
        margin-bottom: 1rem;
        transition: all 0.3s;
        padding: 0.5rem 1rem;
        border-radius: 10px;
    }
    .back-button:hover {
        color: #495057;
        background: #f8f9fa;
    }
    .category-icon-header {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, {{ type == 'vegetale' ? '#10b981, #059669' : '#ef4444, #dc2626' }});
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px {{ type == 'vegetale' ? 'rgba(16, 185, 129, 0.3)' : 'rgba(239, 68, 68, 0.3)' }};
    }
    .product-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 2px solid #f0f0f0;
        height: 100%;
        display: flex;
        flex-direction: column;
        box-shadow: 0 2px 15px rgba(0,0,0,0.06);
    }
    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        border-color: #e0e0e0;
    }
    .product-image {
        width: 100%;
        height: 220px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }
    .product-image i {
        font-size: 4rem;
        color: #adb5bd;
        transition: all 0.3s;
    }
    .product-card:hover .product-image i {
        transform: scale(1.1);
        color: #6c757d;
    }
    .product-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        padding: 0.4rem 0.9rem;
        border-radius: 25px;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }
    .badge-bio {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
    }
    .badge-nouveau {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
    }
    .badge-promo {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }
    .badge-kilo {
        background: rgba(0,0,0,0.85);
        color: white;
    }
    .badge-vivant {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }
    .badge-fermier {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
    }
    .badge-economique {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
    }
    .badge-productif {
        background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        color: white;
    }
    .product-body {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    .product-title {
        font-size: 1.15rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 0.5rem;
    }
    .product-description {
        font-size: 0.875rem;
        color: #6b7280;
        margin-bottom: 1.25rem;
        flex-grow: 1;
        line-height: 1.5;
    }
    .product-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: auto;
        padding-top: 1rem;
        border-top: 1px solid #f3f4f6;
    }
    .product-price {
        font-size: 1.75rem;
        font-weight: 800;
        background: linear-gradient(135deg, #2563eb, #1d4ed8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .btn-commander {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        border: none;
        padding: 0.65rem 1.5rem;
        border-radius: 30px;
        font-weight: 700;
        font-size: 0.875rem;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .btn-commander:hover {
        background: linear-gradient(135deg, #059669, #047857);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
    }
    .btn-commander i {
        font-size: 1rem;
    }
</style>

<div class="container py-4" style="min-height: 100vh;">
    <!-- Header -->
    <div class="page-header">
        <a href="{{ path('app_products') }}" class="back-button">
            <i class="fas fa-arrow-left me-2"></i> Retour aux catégories
        </a>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="fw-bold mb-2">{{ category }}</h1>
                <p class="text-muted mb-0">Découvrez nos produits frais et de qualité</p>
            </div>
            <div class="category-icon-header">
                <i class="fas fa-{{ type == 'vegetale' ? 'leaf' : 'drumstick-bite' }} fa-2x text-white"></i>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row g-4">
        {% if type == 'vegetale' %}
            <!-- Produits Végétaux -->
            
            <!-- Tomates -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">Par kilo</span>
                        <i class="fas fa-seedling"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">Tomates biologiques</h5>
                            <span class="product-badge badge-bio">Bio</span>
                        </div>
                        <p class="product-description">Tomates fraîches du terroir, cultivées sans pesticides</p>
                        <div class="product-footer">
                            <span class="product-price">4,99€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Carottes -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">Par kilo</span>
                        <i class="fas fa-carrot"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">Carottes fraîches</h5>
                            <span class="product-badge badge-nouveau">Nouveau</span>
                        </div>
                        <p class="product-description">Carottes croquantes et sucrées de nos champs</p>
                        <div class="product-footer">
                            <span class="product-price">3,50€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pommes -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">Par kilo</span>
                        <i class="fas fa-apple-alt"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">Pommes Golden</h5>
                            <span class="product-badge badge-bio">Bio</span>
                        </div>
                        <p class="product-description">Pommes douces et juteuses, parfaites pour toute la famille</p>
                        <div class="product-footer">
                            <span class="product-price">5,20€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Laitue -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">À l'unité</span>
                        <i class="fas fa-leaf"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">Laitue romaine</h5>
                            <span class="product-badge badge-bio">Frais</span>
                        </div>
                        <p class="product-description">Laitue croquante du jour, idéale pour vos salades</p>
                        <div class="product-footer">
                            <span class="product-price">2,80€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Courgettes -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">Par kilo</span>
                        <i class="fas fa-seedling"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">Courgettes vertes</h5>
                            <span class="product-badge badge-bio">Bio</span>
                        </div>
                        <p class="product-description">Courgettes tendres et savoureuses de saison</p>
                        <div class="product-footer">
                            <span class="product-price">3,90€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Fraises -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">Barquette 500g</span>
                        <i class="fas fa-strawberry"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">Fraises de saison</h5>
                            <span class="product-badge badge-promo">Promo</span>
                        </div>
                        <p class="product-description">Fraises sucrées et parfumées, fraîchement cueillies</p>
                        <div class="product-footer">
                            <span class="product-price">6,50€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        {% else %}
            <!-- Produits Animaux -->
            
            <!-- Œufs 6 -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">Boîte de 6</span>
                        <i class="fas fa-egg"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">6 œufs biologiques</h5>
                            <span class="product-badge badge-bio">Bio</span>
                        </div>
                        <p class="product-description">Œufs frais de poules élevées en plein air</p>
                        <div class="product-footer">
                            <span class="product-price">4,99€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Œufs 12 -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">Boîte de 12</span>
                        <i class="fas fa-egg"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">12 œufs biologiques</h5>
                            <span class="product-badge badge-bio">Bio</span>
                        </div>
                        <p class="product-description">Boîte de 12 œufs fermiers de qualité</p>
                        <div class="product-footer">
                            <span class="product-price">9,99€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Œufs 24 -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">Boîte de 24</span>
                        <i class="fas fa-egg"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">24 œufs biologiques</h5>
                            <span class="product-badge badge-economique">Économique</span>
                        </div>
                        <p class="product-description">Grand format familial, meilleur rapport qualité-prix</p>
                        <div class="product-footer">
                            <span class="product-price">18,99€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bébé poussin -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">À l'unité</span>
                        <i class="fas fa-kiwi-bird"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">Bébé poussin</h5>
                            <span class="product-badge badge-vivant">Vivant</span>
                        </div>
                        <p class="product-description">Poussin d'un jour, race locale et robuste</p>
                        <div class="product-footer">
                            <span class="product-price">9,99€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Poulets de chair -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">Par kilo</span>
                        <i class="fas fa-drumstick-bite"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">Poulets de chair</h5>
                            <span class="product-badge badge-fermier">Fermier</span>
                        </div>
                        <p class="product-description">Poulet blanc élevé en plein air, alimentation naturelle</p>
                        <div class="product-footer">
                            <span class="product-price">9,99€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pondeuses -->
            <div class="col-md-6 col-lg-4">
                <div class="product-card">
                    <div class="product-image">
                        <span class="product-badge badge-kilo">À l'unité</span>
                        <i class="fas fa-crow"></i>
                    </div>
                    <div class="product-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="product-title">Pondeuses</h5>
                            <span class="product-badge badge-productif">Productif</span>
                        </div>
                        <p class="product-description">Poule pondeuse rousse, excellente production d'œufs</p>
                        <div class="product-footer">
                            <span class="product-price">9,99€</span>
                            <button class="btn-commander">
                                <i class="fas fa-shopping-bag"></i> Commander
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        {% endif %}
    </div>
</div>
{% endblock %}
