{% extends 'base.html.twig' %}

{% block title %}Vendre un produit - FIRMETNA{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }
    .page-header {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: 1px solid rgba(0,0,0,0.05);
    }
    .back-button {
        display: inline-flex;
        align-items: center;
        color: #6c757d;
        text-decoration: none;
        font-weight: 500;
        margin-bottom: 1rem;
        transition: all 0.3s;
        padding: 0.5rem 1rem;
        border-radius: 10px;
    }
    .back-button:hover {
        color: #495057;
        background: #f8f9fa;
    }
    .form-container {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: 1px solid rgba(0,0,0,0.05);
        max-width: 700px;
        margin: 2rem auto;
    }
    .form-group {
        margin-bottom: 1.5rem;
    }
    .form-label {
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 0.5rem;
        display: block;
    }
    .form-control, .form-select {
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s;
    }
    .form-control:focus, .form-select:focus {
        border-color: #10b981;
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        outline: none;
    }
    .form-textarea {
        min-height: 120px;
        resize: vertical;
    }
    .btn-submit {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 30px;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s;
        width: 100%;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }
    .btn-submit:hover {
        background: linear-gradient(135deg, #059669, #047857);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
    }
    .btn-cancel {
        background: #f3f4f6;
        color: #6c757d;
        border: 1px solid #e5e7eb;
        padding: 0.75rem 2rem;
        border-radius: 30px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s;
        width: 100%;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }
    .btn-cancel:hover {
        background: #e5e7eb;
        color: #4b5563;
    }
    .button-group {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }
    .button-group a,
    .button-group button {
        flex: 1;
    }
    .form-title {
        margin-bottom: 2rem;
        text-align: center;
    }
    .form-title h1 {
        font-size: 2rem;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 0.5rem;
    }
    .form-title p {
        color: #6b7280;
        font-size: 1rem;
    }
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }
    @media (max-width: 768px) {
        .form-container {
            padding: 2rem 1.5rem;
        }
        .form-row {
            grid-template-columns: 1fr;
        }
        .button-group {
            flex-direction: column;
        }
    }
</style>

<div class="container py-4" style="min-height: 100vh;">
    <!-- Header -->
    <div class="page-header">
        <a href="{{ path('app_products') }}" class="back-button">
            <i class="fas fa-arrow-left me-2"></i> Retour aux catégories
        </a>
    </div>

    <!-- Form Container -->
    <div class="form-container">
        <div class="form-title">
            <h1><i class="fas fa-plus-circle me-2" style="color: #10b981;"></i>Vendre un produit</h1>
            <p>Créez une nouvelle annonce pour vos produits</p>
        </div>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="form-row">
            <div class="form-group">
                {{ form_label(form.nom, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="form-group">
                {{ form_label(form.prix, 'Prix (€)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prix) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control form-textarea'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="form-row">
            <div class="form-group">
                {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.type) }}
            </div>
            <div class="form-group">
                {{ form_label(form.unite, 'Unité', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.unite, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.unite) }}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                {{ form_label(form.stock, 'Stock (quantité)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'min': '0'}}) }}
                {{ form_errors(form.stock) }}
            </div>
            <div class="form-group">
                {{ form_label(form.isBio, 'Bio', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.isBio, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.isBio) }}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                {{ form_label(form.badge, 'Badge (optionnel)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.badge, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.badge) }}
            </div>
            <div class="form-group">
                {{ form_label(form.imageUrl, 'URL de l\'image', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.imageUrl, {'attr': {'class': 'form-control', 'placeholder': 'https://...'}}) }}
                {{ form_errors(form.imageUrl) }}
            </div>
        </div>

        <div class="button-group">
            <a href="{{ path('app_products') }}" class="btn-cancel">Annuler</a>
            <button type="submit" class="btn-submit">
                <i class="fas fa-check me-2"></i>Créer le produit
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
