{% extends 'admin_base.html.twig' %}

{% block title %}Modifier l'offre - FIRMETNA{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_admin_partner_offer_index') }}" class="text-success text-decoration-none fw-600">
        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
    </a>
    <h2 class="fw-bold mt-2">Modifier l'offre</h2>
    <p class="text-muted">« {{ offer.title }} » – {{ offer.partner ? offer.partner.name : '' }}</p>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 15px; max-width: 800px;">
    <div class="card-body p-4">
        {{ form_start(form) }}
        {% include 'admin/partner_offer/_form.html.twig' %}
        <div class="mt-4">
            <button type="submit" class="btn btn-success px-4 py-2" style="background-color: #1a4d2e; border: none; border-radius: 8px;">
                <i class="fas fa-save me-2"></i>Enregistrer
            </button>
            <a href="{{ path('app_admin_partner_offer_index') }}" class="btn btn-light border px-4 py-2 ms-2" style="border-radius: 8px;">Annuler</a>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
