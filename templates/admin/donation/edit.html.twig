{% extends 'admin_base.html.twig' %}

{% block title %}Modifier l'offre #{{ offre.id }} - FIRMETNA{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_admin_donations') }}" class="text-success text-decoration-none fw-600">
        <i class="fas fa-arrow-left me-2"></i> Retour à la liste
    </a>
    <h2 class="fw-bold mt-2">Modifier l'offre #{{ offre.id }}</h2>
    <p class="text-muted">Catégorie : {{ offre.categorie }} — Modifiez les champs puis enregistrez.</p>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 15px; max-width: 800px;">
    <div class="card-body p-4">
        {% if offre.photo %}
            <p class="text-muted small mb-3">
                <i class="fas fa-image me-1"></i> Photo actuelle : <a href="{{ asset(offre.photo) }}" target="_blank">Voir</a>
                — Laissez vide pour garder la même photo.
            </p>
        {% endif %}
        {{ form_start(form) }}
            {{ include('admin/donation/_form.html.twig', { button_label: 'Mettre à jour' }) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
