{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des Lieux - FIRMETNA{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0">Gestion des Lieux</h2>
        <p class="text-muted mb-0">Gérez tous les lieux de la plateforme</p>
    </div>
    <a href="{{ path('app_admin_lieu_new') }}" class="btn btn-success px-4 py-2" style="background-color: #1a4d2e; border: none; border-radius: 8px;">
        <i class="fas fa-plus me-2"></i> Ajouter un lieu
    </a>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 12px; overflow: hidden;">
    <div class="card-header bg-white py-3 border-0">
        <form method="get" class="row g-2 align-items-center">
            <div class="col-md-6 col-lg-4">
                <div class="input-group">
                    <span class="input-group-text bg-light border-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="q" class="form-control bg-light border-0" placeholder="Rechercher par ville ou adresse..." value="{{ app.request.query.get('q') }}">
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-light px-4" style="border-radius: 8px;">Filtrer</button>
            </div>
        </form>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="px-4 py-3 text-muted fw-semibold">ID</th>
                        <th class="py-3 text-muted fw-semibold">Image</th>
                        <th class="py-3 text-muted fw-semibold">Ville</th>
                        <th class="py-3 text-muted fw-semibold">Adresse</th>
                        <th class="py-3 text-muted fw-semibold">Capacité</th>
                        <th class="px-4 py-3 text-end text-muted fw-semibold" style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for lieu in lieux %}
                        <tr>
                            <td class="px-4">#{{ lieu.id }}</td>
                            <td>
                                {% if lieu.image %}
                                    <img src="{{ lieu.image }}" alt="{{ lieu.ville }}" class="rounded shadow-sm" style="width: 45px; height: 45px; object-fit: cover;">
                                {% else %}
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                        <i class="fas fa-map-marker-alt text-muted"></i>
                                    </div>
                                {% endif %}
                            </td>
                            <td><span class="fw-bold">{{ lieu.ville }}</span></td>
                            <td>{{ lieu.adresse }}</td>
                            <td>
                                {% if lieu.capacite %}
                                    <span class="badge bg-info-subtle text-info rounded-pill px-3">{{ lieu.capacite }} pers.</span>
                                {% else %}
                                    <span class="text-muted opacity-50">-</span>
                                {% endif %}
                            </td>
                            <td class="px-4 text-end">
                                <a href="{{ path('app_admin_lieu_edit', {'id': lieu.id}) }}" class="btn btn-sm btn-light border-0 me-2" style="border-radius: 8px;">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('app_admin_lieu_delete', {'id': lieu.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce lieu ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lieu.id) }}">
                                    <button class="btn btn-sm btn-light border-0 text-danger" style="border-radius: 8px;">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-map-marked-alt fa-3x mb-3 opacity-25"></i>
                                <p class="mb-0">Aucun lieu trouvé.</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
