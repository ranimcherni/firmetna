{% extends 'admin_base.html.twig' %}

{% block title %}Participations - {{ event.nom }}{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_admin_event_index') }}" class="text-success text-decoration-none fw-600">
        <i class="fas fa-arrow-left me-2"></i> Retour à la liste des évènements
    </a>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="fw-bold mb-1">Participations à l'évènement</h2>
        <p class="text-muted mb-0">
            {{ event.nom }} — {{ event.date|date('d/m/Y H:i') }}
        </p>
    </div>
    <span class="badge bg-success-subtle text-success px-3 py-2 rounded-pill fw-bold" style="font-size: 0.85rem;">
        {{ event.participations|length }} participant(s)
    </span>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 15px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 border-0">Participant</th>
                        <th class="py-3 border-0">Email</th>
                        <th class="py-3 border-0">Type</th>
                        <th class="py-3 border-0">Date de participation</th>
                    </tr>
                </thead>
                <tbody>
                    {% for participation in event.participations %}
                        <tr>
                            <td class="ps-4">
                                {% if participation.user %}
                                    <strong>
                                        {{ participation.user.nom ?: '' }} {{ participation.user.prenom ?: '' }}
                                    </strong>
                                {% else %}
                                    <span class="text-muted">Utilisateur supprimé</span>
                                {% endif %}
                            </td>
                            <td class="text-muted">
                                {{ participation.user ? participation.user.email : '-' }}
                            </td>
                            <td>
                                {% if participation.user and participation.user.roleType %}
                                    <span class="badge bg-info-subtle text-info px-3 py-2 rounded-pill fw-bold" style="font-size: 0.75rem;">
                                        {{ participation.user.roleType }}
                                    </span>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td class="text-muted">
                                {{ participation.createdAt ? participation.createdAt|date('d/m/Y H:i') : '-' }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fas fa-users-slash fa-3x mb-3 opacity-25"></i>
                                <p class="mb-0">Aucune participation enregistrée pour cet évènement.</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

