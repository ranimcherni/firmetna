{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des Événements - FIRMETNA{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0">Gestion des Événements</h2>
        <p class="text-muted mb-0">Gérez tous les événements de la plateforme</p>
    </div>
    <a href="{{ path('app_admin_event_new') }}" class="btn btn-success px-4 py-2" style="background-color: #1a4d2e; border: none; border-radius: 8px;">
        <i class="fas fa-plus me-2"></i> Ajouter un événement
    </a>
</div>

<div class="card border-0 shadow-sm mb-4" style="border-radius: 15px;">
    <div class="card-body p-4">
        <form method="get" action="{{ path('app_admin_event_index') }}" class="row g-3">
            <div class="col-md-12">
                <div class="input-group">
                    <span class="input-group-text bg-light border-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="q" value="{{ app.request.query.get('q') }}" class="form-control bg-light border-0" placeholder="Rechercher par nom ou organisateur...">
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 15px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 border-0" style="width: 80px;">ID</th>
                        <th class="py-3 border-0">Nom</th>
                        <th class="py-3 border-0">Date</th>
                        <th class="py-3 border-0">Organisateur</th>
                        <th class="py-3 border-0">Lieu</th>
                        <th class="py-3 border-0 pe-4 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for event in events %}
                    <tr>
                        <td class="ps-4 fw-bold text-muted">#{{ event.id }}</td>
                        <td>
                            <span class="fw-600">{{ event.nom }}</span>
                            {% if event.description %}
                                <br><small class="text-muted">{{ event.description|slice(0, 50) }}{% if event.description|length > 50 %}...{% endif %}</small>
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill fw-bold" style="font-size: 0.75rem;">
                                {{ event.date|date('d/m/Y H:i') }}
                            </span>
                        </td>
                        <td class="text-muted">
                            {{ event.organisateur ?: '-' }}
                        </td>
                        <td>
                            {% if event.lieu %}
                                <span class="text-muted">{{ event.lieu.ville }}</span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td class="pe-4 text-end">
                            <div class="d-flex justify-content-end gap-2">
                                <a href="{{ path('app_admin_event_edit', {'id': event.id}) }}" class="btn btn-sm btn-light border" title="Modifier"><i class="fas fa-pen text-muted"></i></a>
                                <form method="post" action="{{ path('app_admin_event_delete', {'id': event.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                    <button class="btn btn-sm btn-light border" title="Supprimer"><i class="fas fa-trash text-danger"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">Aucun événement trouvé</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
