{% extends 'admin_base.html.twig' %}

{% block title %}Tableau de bord - FIRMETNA{% endblock %}

{% block body %}
<div class="mb-5">
    <h2 class="fw-bold fs-3 mb-1">Bienvenue dans votre espace d'administration</h2>
    <p class="text-muted">Voici un aperçu de l'activité sur la plateforme FIRMETNA</p>
</div>

<div class="row g-4">
    <!-- Stat Cards -->
    <div class="col-xl-3 col-md-6">
        <a href="{{ path('app_admin_user_index') }}" class="text-decoration-none text-dark">
            <div class="card border-0 shadow-sm h-100 p-3 card-hover" style="border-radius: 20px;">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: #e8f5e9; color: #1a4d2e;">
                        <i class="fas fa-users fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1" style="font-size: 0.85rem;">Total Utilisateurs</h6>
                        <h4 class="fw-bold mb-0">{{ totalUsers }}</h4>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-xl-3 col-md-6">
        <a href="{{ path('app_admin_produits') }}" class="text-decoration-none text-dark">
            <div class="card border-0 shadow-sm h-100 p-3 card-hover" style="border-radius: 20px;">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: #fff3e0; color: #ef6c00;">
                        <i class="fas fa-box fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1" style="font-size: 0.85rem;">Total Produits</h6>
                        <h4 class="fw-bold mb-0">{{ totalProducts }}</h4>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-xl-3 col-md-6">
        <a href="{{ path('app_admin_evenements') }}" class="text-decoration-none text-dark">
            <div class="card border-0 shadow-sm h-100 p-3 card-hover" style="border-radius: 20px;">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: #e3f2fd; color: #1565c0;">
                        <i class="fas fa-calendar-check fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1" style="font-size: 0.85rem;">Événements à venir</h6>
                        <h4 class="fw-bold mb-0">{{ totalEvents }}</h4>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-xl-3 col-md-6">
        <a href="{{ path('app_admin_donations') }}" class="text-decoration-none text-dark">
            <div class="card border-0 shadow-sm h-100 p-3 card-hover" style="border-radius: 20px;">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: #fce4ec; color: #c2185b;">
                        <i class="fas fa-hand-holding-heart fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1" style="font-size: 0.85rem;">Donations</h6>
                        <h4 class="fw-bold mb-0">{{ totalDonations }}€</h4>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<div class="mt-5 text-center p-5 bg-white shadow-sm" style="border-radius: 20px;">
    <img src="{{ asset('images/logo_hand.png') }}" alt="FIRMETNA" style="height: 100px; opacity: 0.1; filter: grayscale(1);">
    <h3 class="mt-4 text-muted fw-bold">Sélectionnez un module dans la barre latérale pour commencer</h3>
</div>
{% endblock %}
