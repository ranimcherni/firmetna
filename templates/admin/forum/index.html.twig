{% extends 'admin_base.html.twig' %}

{% block title %}Gestion du Forum{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion du Forum</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Titre</th>
                            <th>Auteur</th>
                            <th>Type</th>
                            <th>Date</th>
                            <th>Commentaires</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for publication in publications %}
                        <tr>
                            <td>{{ publication.id }}</td>
                            <td>{{ publication.titre }}</td>
                            <td>{{ publication.auteur.nom ?? publication.auteur.email }}</td>
                            <td>
                                <span class="badge {{ publication.type == 'idee' ? 'bg-success' : 'bg-warning' }}">
                                    {{ publication.getTypeLabel() }}
                                </span>
                            </td>
                            <td>{{ publication.dateCreation ? publication.dateCreation|date('d/m/Y H:i') : '' }}</td>
                            <td>{{ publication.commentaires|length }}</td>
                            <td>
                                <a href="{{ path('app_forum_show', {'id': publication.id}) }}" class="btn btn-info btn-sm" target="_blank">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <form method="post" action="{{ path('app_admin_forum_delete', {'id': publication.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette publication ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publication.id) }}">
                                    <button class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucune publication trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(publications) }}
            </div>
        </div>
    </div>
{% endblock %}
