{% extends 'admin_base.html.twig' %}

{% block title %}Modifier {{ produit.nom }} - FIRMETNA{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_admin_produits') }}" class="text-success text-decoration-none fw-600">
        <i class="fas fa-arrow-left me-2"></i> Retour ├á la liste
    </a>
    <h2 class="fw-bold mt-2">Modifier le produit</h2>
    <p class="text-muted">{{ produit.nom }}</p>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 15px; max-width: 800px;">
    <div class="card-body p-4">
        {{ form_start(form) }}
            <div class="row g-4">
                <div class="col-12">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.description) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.prix) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.type) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.unite) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.stock) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.isBio) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.badge) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.imageUrl) }}
                </div>
                <div class="col-12 mt-4">
                    <hr class="opacity-10">
                    <button type="submit" class="btn btn-success px-4 py-2" style="background-color: #1a4d2e; border: none; border-radius: 8px;">
                        <i class="fas fa-save me-2"></i> Enregistrer
                    </button>
                    <a href="{{ path('app_admin_produit_show', {'id': produit.id}) }}" class="btn btn-light border px-4 py-2 ms-2" style="border-radius: 8px;">Voir</a>
                    <a href="{{ path('app_admin_produits') }}" class="btn btn-light border px-4 py-2 ms-2" style="border-radius: 8px;">Annuler</a>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
