{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des commandes - FIRMETNA{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0">Gestion des commandes</h2>
        <p class="text-muted mb-0">Suivi des commandes clients</p>
    </div>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 15px;">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 border-0">N°</th>
                        <th class="py-3 border-0">Client</th>
                        <th class="py-3 border-0">Date</th>
                        <th class="py-3 border-0">Total</th>
                        <th class="py-3 border-0">Statut</th>
                        <th class="py-3 border-0 pe-4 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in commandes %}
                    <tr>
                        <td class="ps-4 fw-bold">#{{ commande.id }}</td>
                        <td>
                            {% if commande.client %}
                                {{ commande.client.nom }} {{ commande.client.prenom }}
                                <br><small class="text-muted">{{ commande.client.email }}</small>
                            {% else %}
                                —
                            {% endif %}
                        </td>
                        <td>{{ commande.dateCommande ? commande.dateCommande|date('d/m/Y H:i') : '—' }}</td>
                        <td class="fw-600">{{ commande.total }} €</td>
                        <td>
                            {% set statut = commande.statut %}
                            {% set statutClass = 'bg-secondary' %}
                            {% if statut == 'Confirmée' %}{% set statutClass = 'bg-info' %}
                            {% elseif statut == 'Expédiée' %}{% set statutClass = 'bg-primary' %}
                            {% elseif statut == 'Livrée' %}{% set statutClass = 'bg-success' %}
                            {% elseif statut == 'Annulée' %}{% set statutClass = 'bg-danger' %}
                            {% endif %}
                            <span class="badge {{ statutClass }} px-3 py-2 rounded-pill">{{ statut }}</span>
                        </td>
                        <td class="pe-4 text-end">
                            <a href="{{ path('app_admin_commande_show', {'id': commande.id}) }}" class="btn btn-sm btn-success" style="background-color: #1a4d2e; border: none;"><i class="fas fa-eye me-1"></i> Voir</a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">Aucune commande</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
