{% extends 'base.html.twig' %}

{% block title %}Connexion - Firmetna{% endblock %}

{% block stylesheets %}
<style>
    :root {
        --primary-green: #1a4d2e;
        --light-green: #e8f5e9;
        --text-dark: #111827;
        --text-muted: #6b7280;
        --white: #ffffff;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Inter', sans-serif;
        background-color: var(--white);
    }

    .split-container {
        display: flex;
        min-height: calc(100vh - 70px);
        width: 100%;
    }

    .left-side {
        flex: 1.2;
        background: linear-gradient(rgba(0, 50, 20, 0.4), rgba(0, 50, 20, 0.5)), 
                    url('https://images.unsplash.com/photo-1585320806297-9794b3e4eeae?w=1200&h=1600&fit=crop') no-repeat center center;
        background-size: cover;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 4rem;
        color: white;
        position: relative;
    }

    .left-side h1 {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 2rem;
        text-shadow: 0 4px 15px rgba(0,0,0,0.3);
    }

    .left-side p {
        font-size: 1.25rem;
        max-width: 500px;
        line-height: 1.6;
        opacity: 0.95;
        text-shadow: 0 2px 10px rgba(0,0,0,0.3);
    }

    .right-side {
        flex: 1;
        background-color: #fcfdfc;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 4rem;
        border-left: 1px solid #eef2ee;
    }

    .login-box {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
    }

    .login-header {
        margin-bottom: 2.5rem;
        text-align: center;
    }

    .logo-form-container {
        background-color: white;
        padding: 10px 20px;
        border-radius: 12px;
        display: inline-flex;
        align-items: center;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        margin-bottom: 1.5rem;
    }

    .form-logo {
        height: 85px;
        width: auto;
    }

    .login-header h2 {
        font-size: 2rem;
        font-weight: 800;
        color: var(--text-dark);
        margin: 0;
        text-transform: uppercase;
        letter-spacing: -0.5px;
    }

    .login-header p {
        color: var(--primary-green);
        font-size: 0.95rem;
        font-weight: 600;
        margin-top: 8px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--text-dark);
    }

    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary-green);
        opacity: 0.7;
    }

    .form-control {
        width: 100%;
        padding: 0.85rem 1rem 0.85rem 2.8rem;
        border: 1px solid #e2e8f0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.2s;
        box-sizing: border-box;
        background-color: #f8fafc;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-green);
        background-color: white;
        box-shadow: 0 0 0 3px rgba(0, 150, 77, 0.1);
    }

    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        font-size: 0.9rem;
    }

    .remember-me {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-muted);
        font-weight: 500;
        cursor: pointer;
    }

    .forgot-link {
        color: var(--primary-green);
        text-decoration: none;
        font-weight: 700;
    }

    .btn-submit {
        width: 100%;
        padding: 1rem;
        background-color: var(--primary-green);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(0, 150, 77, 0.2);
    }

    .btn-submit:hover {
        background-color: #007a3e;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 150, 77, 0.3);
    }

    .register-footer {
        text-align: center;
        margin-top: 2.5rem;
        color: var(--text-muted);
        font-size: 0.95rem;
        font-weight: 500;
    }

    .register-footer a {
        color: var(--primary-green);
        text-decoration: none;
        font-weight: 700;
        margin-left: 5px;
    }

    /* ... existing styles ... */
    .login-tabs {
        border-bottom: 2px solid #eef2ee;
        margin-bottom: 2rem;
    }

    .tab-btn {
        background: none;
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 700;
        color: var(--text-muted);
        cursor: pointer;
        transition: all 0.3s;
        border-bottom: 3px solid transparent;
        margin-bottom: -2px;
    }

    .tab-btn.active {
        color: var(--primary-green);
        border-bottom-color: var(--primary-green);
    }

    .tab-btn:hover:not(.active) {
        color: var(--text-dark);
    }
    .face-recognition-section {
        position: relative;
    }

    .face-guide-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 170px;
        height: 190px;
        border: 2px dashed rgba(25, 135, 84, 0.4);
        border-radius: 40px;
        pointer-events: none;
        z-index: 5;
        opacity: 0.7;
    }

    .face-guide-overlay::after {
        content: '';
        width: 100%;
        height: 2px;
        background: rgba(25, 135, 84, 0.3);
        position: absolute;
        box-shadow: 0 0 10px rgba(25, 135, 84, 0.5);
        animation: scan 2.5s infinite ease-in-out;
    }

    @keyframes scan {
        0%, 100% { top: 15%; }
        50% { top: 85%; }
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
<div class="split-container">
    <div class="left-side">
        <h1>Cultivez votre avenir avec nous</h1>
        <p>Rejoignez la première plateforme agricole qui connecte producteurs, clients et volontaires.</p>
    </div>

    <div class="right-side">
        <div class="login-box">
            <div class="login-header">
                <div class="logo-form-container">
                    <img src="{{ asset('images/logo_hand.png') }}" alt="FIRMETNA" class="form-logo">
                </div>
                <h2>DÉJÀ MEMBRE ?</h2>
                <p>Accédez à votre espace Firmetna</p>
            </div>

            <form method="post" id="loginForm">
                {% if error %}
                    <div style="background-color: #fee2e2; color: #dc2626; padding: 1rem; border-radius: 10px; margin-bottom: 1.5rem; font-size: 0.9rem; text-align: center; border: 1px solid #fecaca;">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope input-icon"></i>
                        <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" placeholder="votre@email.com" required autofocus>
                    </div>
                </div>

                <div class="form-group" id="password-group">
                    <label class="form-label" for="password">Mot de passe</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input type="password" name="password" id="password" class="form-control" placeholder="••••••••" required>
                    </div>
                </div>

                <div class="form-options">
                    <label class="remember-me">
                        <input type="checkbox" name="_remember_me" style="accent-color: var(--primary-green);"> Se souvenir de moi
                    </label>
                    <a href="{{ path('app_forgot_password_request') }}" class="forgot-link">Mot de passe oublié ?</a>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn-submit mb-3" type="submit">
                    Se connecter
                </button>

                <div class="text-center my-3 text-muted small">OU</div>

                <button type="button" id="btn-facial-trigger" class="btn-submit" style="background-color: #f8fafc; color: var(--primary-green); border: 2px solid var(--primary-green); box-shadow: none;">
                    <i class="fas fa-face-viewfinder me-2"></i>Se connecter avec le visage
                </button>

                <div id="facial-group" class="face-recognition-section mt-4 text-center d-none">
                    <div class="video-container position-relative mx-auto mb-3" style="width: 280px; height: 210px; background: #000; border-radius: 12px; overflow: hidden; border: 3px solid var(--primary-green);">
                        <video id="video" style="width: 100%; height: 100%; object-fit: cover; transform: scaleX(-1);" autoplay muted></video>
                        <canvas id="overlay" class="position-absolute start-0 top-0" style="width: 100%; height: 100%; object-fit: cover; transform: scaleX(-1); pointer-events: none;"></canvas>
                        <div class="face-guide-overlay"></div>
                        <div id="loading-models" class="position-absolute start-0 top-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark text-white opacity-75">
                            <div class="spinner-border text-light" role="status"></div>
                        </div>
                    </div>
                    <div id="face-status" class="alert p-2 small d-none"></div>
                </div>
            </form>

            <div class="register-footer">
                Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire gratuitement</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script defer src="https://cdn.jsdelivr.net/npm/face-api.js@0.22.2/dist/face-api.min.js"></script>
<script>
    let loginMode = 'classic';
    const video = document.getElementById('video');
    const overlay = document.getElementById('overlay');
    const loadingModels = document.getElementById('loading-models');
    const faceStatus = document.getElementById('face-status');
    const loginForm = document.getElementById('loginForm');
    const facialGroup = document.getElementById('facial-group');
    const emailInput = document.getElementById('email');
    const btnFacialTrigger = document.getElementById('btn-facial-trigger');
    
    let modelsLoaded = false;
    let verificationInProgress = false;
    const MODEL_URL = 'https://raw.githubusercontent.com/justadudewhohacks/face-api.js/master/weights';

    btnFacialTrigger.addEventListener('click', () => {
        if (!emailInput.value) {
            alert("Veuillez d'abord saisir votre email.");
            emailInput.focus();
            return;
        }
        
        loginMode = 'facial';
        facialGroup.classList.remove('d-none');
        btnFacialTrigger.classList.add('d-none');
        
        if (!modelsLoaded) {
            initFaceAPI();
        } else {
            startVideo();
        }
    });

    async function initFaceAPI() {
        try {
            await Promise.all([
                faceapi.nets.tinyFaceDetector.loadFromUri(MODEL_URL),
                faceapi.nets.ssdMobilenetv1.loadFromUri(MODEL_URL),
                faceapi.nets.faceLandmark68Net.loadFromUri(MODEL_URL),
                faceapi.nets.faceRecognitionNet.loadFromUri(MODEL_URL)
            ]);
            modelsLoaded = true;
            loadingModels.classList.add('d-none');
            startVideo();
        } catch (err) {
            console.error("Models failed:", err);
            loadingModels.innerHTML = '<div class="text-danger small">Erreur IA</div>';
        }
    }

    function startVideo() {
        navigator.mediaDevices.getUserMedia({ video: { width: 640, height: 480 } })
            .then(stream => { video.srcObject = stream; })
            .catch(err => { 
                console.error("Camera error:", err);
                faceStatus.className = "alert alert-danger p-2 small mt-2";
                faceStatus.textContent = "Caméra inaccessible.";
                faceStatus.classList.remove('d-none');
            });
    }

    video.addEventListener('play', () => {
        const displaySize = { width: 280, height: 210 };
        overlay.width = 280;
        overlay.height = 210;
        faceapi.matchDimensions(overlay, displaySize);

        let livenessScore = 0;
        let lastNosePos = null;
        let lastEyeDistance = null;
        let livenessVerified = false;

        const recognitionLoop = setInterval(async () => {
            if (loginMode !== 'facial' || verificationInProgress || video.paused) return;
            
            try {
                // 1. FAST FEEDBACK: Detect landmarks for liveness and feedback
                const detection = await faceapi.detectSingleFace(video, new faceapi.TinyFaceDetectorOptions({ inputSize: 224, scoreThreshold: 0.5 }))
                    .withFaceLandmarks();

                const ctx = overlay.getContext('2d');
                ctx.clearRect(0, 0, overlay.width, overlay.height);

                if (detection) {
                    const landmarks = detection.landmarks;
                    const nose = landmarks.getNose()[0];
                    const leftEye = landmarks.getLeftEye();
                    const rightEye = landmarks.getRightEye();

                    // LIVENESS CHECK 1: Blink Detection (Rough approximation by eye aspect ratio change or distance)
                    const eyeDist = Math.hypot(leftEye[0].x - rightEye[0].x, leftEye[0].y - rightEye[0].y);
                    
                    // LIVENESS CHECK 2: Head Movement
                    if (lastNosePos) {
                        const movement = Math.hypot(nose.x - lastNosePos.x, nose.y - lastNosePos.y);
                        if (movement > 2 && movement < 30) {
                            livenessScore += 10;
                        }
                    }
                    lastNosePos = nose;

                    // Progress bar or feedback
                    if (livenessScore < 100) {
                        faceStatus.className = "alert alert-warning p-2 mt-2 shadow-sm border-0 small text-center d-block";
                        faceStatus.innerHTML = `<i class="fas fa-arrows-alt me-2"></i>VÉRIFICATION DE VIVACITÉ : BOUGEZ LÉGÈREMENT (${livenessScore}%)`;
                    } else if (!livenessVerified) {
                        livenessVerified = true;
                        faceStatus.className = "alert alert-success p-2 mt-2 shadow-sm border-0 small text-center d-block";
                        faceStatus.innerHTML = '<i class="fas fa-check-circle me-2"></i>VIVACITÉ CONFIRMÉE - ANALYSE...';
                    }

                    const displaySize = { width: video.clientWidth, height: video.clientHeight };
                    if (overlay.width !== displaySize.width) {
                        overlay.width = displaySize.width;
                        overlay.height = displaySize.height;
                    }
                    const resizedResult = faceapi.resizeResults(detection, displaySize);
                    faceapi.draw.drawFaceLandmarks(overlay, resizedResult);
                    
                    if (livenessVerified) {
                        // 2. HIGH-PRECISION VERIFY: Use SSD and Recognition
                        const fullDetection = await faceapi.detectSingleFace(video, new faceapi.SsdMobilenetv1Options())
                            .withFaceLandmarks().withFaceDescriptor();

                        if (fullDetection && fullDetection.descriptor && !verificationInProgress) {
                            verifyFace(Array.from(fullDetection.descriptor));
                        }
                    }
                } else {
                    faceStatus.className = "alert alert-primary p-2 mt-2 shadow-sm border-0 small text-center d-block";
                    faceStatus.innerHTML = '<i class="fas fa-user-clock me-2"></i>Positionnez votre visage...';
                }
            } catch (err) {
                console.error("AI Login Error:", err);
            }
        }, 300);
    });

    // Native function for the button
    window.manualVerify = function() {
        if (currentSignature) {
            verifyFace(currentSignature);
        } else {
            alert("Attendez que le cadre vert apparaisse sur votre visage.");
        }
    };

    async function verifyFace(signature) {
        if (verificationInProgress) return;
        
        const email = emailInput.value;
        if (!email) {
            alert("Veuillez entrer votre email.");
            return;
        }

        verificationInProgress = true;
        
        faceStatus.className = "alert alert-primary p-2 mt-2 shadow-sm border-0 small text-center fw-bold d-block";
        faceStatus.innerHTML = `<i class="fas fa-spinner fa-spin me-2"></i>VÉRIFICATION : ${email}`;

        try {
            const response = await fetch('{{ path('app_verify_face') }}', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    email: email,
                    signature: signature
                })
            });

            if (!response.ok) throw new Error("Erreur serveur (" + response.status + ")");

            const result = await response.json();

            if (result.success) {
                faceStatus.className = "alert alert-success p-2 mt-2 shadow-sm border-0 small text-center fw-bold";
                faceStatus.textContent = "ACCÈS AUTORISÉ - CONNEXION...";
                if (video.srcObject) {
                    video.srcObject.getTracks().forEach(track => track.stop());
                }
                window.location.href = result.redirect;
            } else {
                faceStatus.className = "alert alert-danger p-2 mt-2 shadow-sm border-0 small text-center fw-bold";
                faceStatus.textContent = result.message || "VISAGE NON RECONNU";
                setTimeout(() => {
                    verificationInProgress = false;
                }, 3000);
            }
        } catch (err) {
            console.error("error:", err);
            faceStatus.className = "alert alert-warning p-2 mt-2 shadow-sm border-0 small text-center fw-bold";
            faceStatus.textContent = "ERREUR DE RÉSEAU";
            setTimeout(() => { verificationInProgress = false; }, 4000);
        }
    }
</script>
{% endblock %}
