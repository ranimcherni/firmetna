{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire - Forum FIRMETNA{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f3f0ff !important;
    }

    .forum-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 0;
    }

    .back-btn {
        color: #1a4d2e;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 1.5rem;
        transition: transform 0.2s;
    }
    .back-btn:hover {
        transform: translateX(-5px);
        color: #23613a;
    }

    .edit-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 25px rgba(0,0,0,0.08);
        padding: 2rem;
    }
</style>

<div class="container forum-container">
    <a href="{{ path('app_forum_show', {id: commentaire.publication.id}) }}" class="back-btn">
        <i class="fas fa-arrow-left"></i> Retour Ã  la publication
    </a>

    <div class="edit-card">
        <h1 class="h4 fw-bold mb-4">
            <i class="fas fa-edit text-success me-2"></i>Modifier le commentaire
        </h1>

        {{ form_start(form) }}
            {% if not form.vars.valid %}
                <div class="alert alert-danger">
                    {{ form_errors(form) }}
                    {{ form_errors(form.contenu) }}
                </div>
            {% endif %}

            {{ form_row(form.contenu, {'attr': {'rows': 5, 'class': 'form-control'}}) }}

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success rounded-pill px-4">
                    <i class="fas fa-check me-2"></i>Enregistrer les modifications
                </button>
                <a href="{{ path('app_forum_show', {id: commentaire.publication.id}) }}" class="btn btn-outline-secondary rounded-pill px-4">
                    Annuler
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
