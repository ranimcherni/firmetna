<form method="post" action="{{ path('app_forum_delete', { id: publication.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer cette publication et tous ses commentaires ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publication.id) }}">
    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill">
        <i class="fas fa-trash me-1"></i>Supprimer
    </button>
</form>
