{% extends 'base.html.twig' %}

{% block title %}Nouvelle publication - Forum FIRMETNA{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f3f0ff !important;
    }
</style>
<div class="forum-page">
<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_forum') }}">Forum</a></li>
            <li class="breadcrumb-item active" aria-current="page">Nouvelle publication</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-4">
                    <h1 class="h4 fw-bold mb-4"><i class="fas fa-plus-circle text-success me-2"></i>Nouvelle publication</h1>
                    <p class="text-muted mb-4">Partagez une idée ou décrivez un problème avec la communauté.</p>

                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    
                    {% if not form.vars.valid %}
                        <div class="alert alert-danger">
                            <strong>Erreurs de validation :</strong>
                            {{ form_errors(form) }}
                            {{ form_errors(form.titre) }}
                            {{ form_errors(form.contenu) }}
                            {{ form_errors(form.type) }}
                            {{ form_errors(form.imageFile) }}
                        </div>
                    {% endif %}
                    
                    {{ form_row(form.titre) }}
                    {{ form_row(form.type) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.contenu) }}
                        {{ form_widget(form.contenu) }}
                        <trix-editor input="{{ form.contenu.vars.id }}" class="trix-content bg-light p-3 rounded-3" style="min-height: 250px; border: 1px solid #dee2e6;"></trix-editor>
                        {{ form_errors(form.contenu) }}
                    </div>

                    {{ form_row(form.imageFile) }}
                    <div class="d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-success rounded-pill px-4">
                            <i class="fas fa-check me-1"></i>Publier
                        </button>
                        <a href="{{ path('app_forum') }}" class="btn btn-outline-success rounded-pill">Annuler</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}
