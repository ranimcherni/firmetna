{% extends 'base.html.twig' %}

{% block title %}Accueil - FIRMETNA{% endblock %}

{% block body %}
<!-- SECTION HERO -->
<div class="position-relative vh-100 overflow-hidden d-flex flex-column align-items-center justify-content-center">
    <!-- Image de fond avec overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100">
        <img src="{{ asset('images/acc1.png') }}" 
             alt="Accueil Firmetna"
             class="w-100 h-100"
             style="object-fit: cover; filter: brightness(0.8) contrast(1.1);">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,0.2));"></div>
    </div>
    
    <div class="container position-relative text-center text-white">
        <h1 class="display-1 fw-bold mb-4" style="letter-spacing: 12px; font-weight: 800;">
            FIRMETNA
        </h1>
        
        <h2 class="h3 fw-600 mb-2">
            Cultivez votre passion, <span style="color: #fbbf24;">Gérez votre succès</span>
        </h2>
        
        <p class="h6 mb-5 opacity-75 text-uppercase fw-bold" style="letter-spacing: 2px;">
            "De notre terre à votre table"
        </p>
        
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="{{ path('app_register') }}" class="btn btn-light btn-lg px-4 rounded-pill fw-bold py-3 shadow-lg d-flex align-items-center gap-2">
                <i class="fas fa-leaf text-success"></i> Commencer gratuitement
            </a>
            <a href="#modules" class="btn btn-outline-light btn-lg px-4 rounded-pill py-3 fw-500 border-2">
                Explorer Firmetna
            </a>
        </div>
        
        <!-- Statistiques stylisées (Glassmorphism Premium) -->
        <div class="row justify-content-center mt-5 pt-4 g-4 overflow-hidden">
            {% set stats = [
                {val: '500+', label: 'Agriculteurs', icon: 'fas fa-wheat-awn'},
                {val: '2k+', label: 'Membres', icon: 'fas fa-users'},
                {val: '200+', label: 'Événements', icon: 'fas fa-calendar-check'},
                {val: '50k€', label: 'Dons', icon: 'fas fa-hand-holding-heart'}
            ] %}
            {% for stat in stats %}
            <div class="col-6 col-md-3 col-lg-2">
                <div class="p-4 rounded-4 border border-white border-opacity-10 h-100 card-hover" 
                     style="background: rgba(255,255,255,0.08); backdrop-filter: blur(12px); transition: transform 0.3s ease;">
                    <i class="{{ stat.icon }} mb-3 text-warning fs-4 d-block"></i>
                    <div class="h3 fw-bold mb-0 text-white">{{ stat.val }}</div>
                    <div class="small text-white text-opacity-70 fw-bold text-uppercase" style="font-size: 0.7rem; letter-spacing: 1px;">{{ stat.label }}</div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- ========== MODULES SECTION ========== -->
<section id="modules" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5 display-5 fw-bold text-dark">
            Nos 6 Modules Principaux
        </h2>
        
        <div class="row g-4">
            {% for module in [
                { icon: 'fas fa-users', title: 'Gestion Utilisateur', desc: 'Inscription, connexion et gestion des rôles' },
                { icon: 'fas fa-calendar', title: 'Événements', desc: 'Calendrier interactif et inscriptions' },
                { icon: 'fas fa-comments', title: 'Forum', desc: 'Discussions et échanges communautaires' },
                { icon: 'fas fa-handshake', title: 'Partenariats', desc: 'Gérez vos collaborations et partenariats' },
                { icon: 'fas fa-heart', title: 'Dons', desc: 'Campagnes de collecte et soutien' },
                { icon: 'fas fa-box', title: 'Produits', desc: 'Gérez votre inventaire et catalogue produits' }
            ] %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm hover-shadow">
                    <div class="card-body text-center p-4">
                        <i class="{{ module.icon }} fa-3x text-success mb-3"></i>
                        <h5 class="card-title fw-bold">{{ module.title }}</h5>
                        <p class="card-text text-muted">{{ module.desc }}</p>
                        <a href="#" class="btn btn-outline-success mt-2">Découvrir</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- ========== CTA SECTION ========== -->
<section class="py-5" style="background: linear-gradient(135deg, #0d2617, #1a4d2e);">
    <div class="container text-center text-white">
        <h2 class="display-6 fw-bold mb-4">Prêt à transformer votre gestion agricole ?</h2>
        <p class="lead mb-5">Rejoignez des centaines d'agriculteurs qui utilisent déjà FIRMETNA</p>
        
        <div class="d-flex flex-column flex-md-row justify-content-center gap-3 mb-5">
            <a href="{{ path('app_register') }}" class="btn btn-light btn-lg px-5 shadow-sm">
                <i class="fas fa-user-plus me-2"></i>Créer un compte gratuit
            </a>
            <a href="#" class="btn btn-outline-light btn-lg px-5">
                Nous contacter
            </a>
        </div>

        <div class="pt-4 border-top border-white border-opacity-10">
            <p class="small text-white text-opacity-70 mb-3 text-uppercase fw-bold" style="letter-spacing: 2px;">Suivez-nous</p>
            <div class="d-flex justify-content-center gap-4">
                <a href="#" class="text-white fs-3 transition-all hover-grow" title="Facebook">
                    <i class="fab fa-facebook"></i>
                </a>
                <a href="#" class="text-white fs-3 transition-all hover-grow" title="Instagram">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="#" class="text-white fs-3 transition-all hover-grow" title="LinkedIn">
                    <i class="fab fa-linkedin"></i>
                </a>
            </div>
        </div>
    </div>
</section>

{% endblock %}