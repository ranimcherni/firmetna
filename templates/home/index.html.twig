{% extends 'base.html.twig' %}

{% block title %}Accueil - FIRMETNA{% endblock %}

{% block body %}
<!-- SECTION HERO -->
<div class="position-relative vh-100 overflow-hidden d-flex flex-column align-items-center justify-content-center">
    <!-- Image de fond avec overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100">
        <img src="https://images.unsplash.com/photo-1625246333195-78d9c38ad449?auto=format&fit=crop&q=80&w=2000" 
             alt="Agriculture tunisienne"
             class="w-100 h-100"
             style="object-fit: cover; filter: brightness(0.7);">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5));"></div>
    </div>
    
    <div class="container position-relative text-center text-white" style="z-index: 2;">
        <h1 class="display-1 fw-bold mb-3" style="letter-spacing: 8px; font-family: 'Outfit', sans-serif; text-shadow: 2px 4px 15px rgba(0,0,0,0.5);">
            FIRMETNA
        </h1>
        <p class="fs-2 fw-bold mb-2" style="font-family: 'Outfit', sans-serif; text-shadow: 1px 2px 10px rgba(0,0,0,0.5);">
            Cultivez votre passion, gérez votre succès
        </p>
        <p class="h4 mb-5 opacity-90 fw-semibold text-warning" style="letter-spacing: 2px; text-transform: uppercase;">"L'excellence de la terre à votre table"</p>
        
        <div class="d-flex justify-content-center gap-4 mt-5">
            <a href="{{ path('app_register') }}" class="btn btn-light btn-lg px-5 rounded-pill fw-bold py-3 shadow-lg hover-scale" style="font-size: 1.2rem;">
                <i class="fas fa-seedling me-2 text-success"></i>Commencer gratuitement
            </a>
            <a href="#modules" class="btn btn-outline-light btn-lg px-5 rounded-pill py-3 hover-blur" style="border-width: 2px; font-weight: 600;">
                Explorer Firmetna
            </a>
        </div>
        
        <!-- Statistiques stylisées (Advanced Glassmorphism) -->
        <div class="row justify-content-center mt-5 pt-4 g-4 fadeIn">
            {% set stats = [
                {val: '500+', label: 'Agriculteurs', icon: 'fa-wheat-awn'},
                {val: '2k+', label: 'Membres', icon: 'fa-users'},
                {val: '200+', label: 'Événements', icon: 'fa-calendar-check'},
                {val: '50k€', label: 'Dons', icon: 'fa-hand-holding-heart'}
            ] %}
            {% for stat in stats %}
            <div class="col-6 col-md-2">
                <div class="p-4 rounded-4 shadow-lg border border-white border-opacity-10 h-100 transition-all" 
                     style="background: rgba(255,255,255,0.08); backdrop-filter: blur(15px); -webkit-backdrop-filter: blur(15px);">
                    <i class="fas {{ stat.icon }} mb-2 text-warning fs-4"></i>
                    <div class="h3 fw-bold mb-0 text-white">{{ stat.val }}</div>
                    <div class="small text-white text-opacity-80 fw-bold" style="letter-spacing: 1px;">{{ stat.label }}</div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<style>
    .hover-scale { transition: all 0.3s; }
    .hover-scale:hover { transform: scale(1.05); }
    .hover-blur:hover { backdrop-filter: blur(5px); background: rgba(255,255,255,0.1); }
    .transition-all { transition: all 0.4s ease; }
    .transition-all:hover { transform: translateY(-10px); background: rgba(255,255,255,0.15) !important; }
    .display-1 { font-size: calc(3rem + 4.5vw); }
</style>
<!-- ========== MODULES SECTION ========== -->
<section id="modules" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5 display-5 fw-bold text-dark">
            Nos 6 Modules Principaux
        </h2>
        
        <div class="row g-4">
            {% for module in [
                { icon: 'fas fa-users', title: 'Gestion Utilisateur', desc: 'Inscription, connexion et gestion des rôles', path: '#' },
                { icon: 'fas fa-calendar', title: 'Événements', desc: 'Calendrier interactif et inscriptions', path: '#' },
                { icon: 'fas fa-comments', title: 'Forum', desc: 'Discussions et échanges communautaires', path: path('app_forum') },
                { icon: 'fas fa-handshake', title: 'Partenariats', desc: 'Gérez vos collaborations et partenariats', path: '#' },
                { icon: 'fas fa-heart', title: 'Dons', desc: 'Campagnes de collecte et soutien', path: '#' },
                { icon: 'fas fa-box', title: 'Produits', desc: 'Gérez votre inventaire et catalogue produits', path: '#' }
            ] %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm hover-shadow">
                    <div class="card-body text-center p-4">
                        <i class="{{ module.icon }} fa-3x text-success mb-3"></i>
                        <h5 class="card-title fw-bold">{{ module.title }}</h5>
                        <p class="card-text text-muted">{{ module.desc }}</p>
                        <a href="{{ module.path }}" class="btn btn-outline-success mt-2">Découvrir</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- ========== CTA SECTION ========== -->
<section class="py-5" style="background: linear-gradient(135deg, #1a4d2e, #2d5f3f);">
    <div class="container text-center text-white">
        <h2 class="display-6 fw-bold mb-4">Prêt à transformer votre gestion agricole ?</h2>
        <p class="lead mb-5">Rejoignez des centaines d'agriculteurs qui utilisent déjà FIRMETNA</p>
        
        <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
            <a href="{{ path('app_register') }}" class="btn btn-light btn-lg px-5">
                <i class="fas fa-user-plus me-2"></i>Créer un compte gratuit
            </a>
            <a href="#" class="btn btn-outline-light btn-lg px-5">
                Nous contacter
            </a>
        </div>
    </div>
</section>

{% endblock %}