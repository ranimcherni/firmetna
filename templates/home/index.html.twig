{% extends 'base.html.twig' %}

{% block title %}Accueil - FIRMETNA{% endblock %}

{% block body %}
<!-- SECTION HERO -->
<div class="position-relative vh-100 overflow-hidden d-flex flex-column align-items-center justify-content-center">
    <!-- Image de fond avec overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100">
        <img src="{{ asset('images/hero_farmer.png') }}" 
             alt="Agriculture tunisienne"
             class="w-100 h-100"
             style="object-fit: cover; filter: brightness(0.6);">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.2);"></div>
    </div>
    
    <div class="container position-relative text-center text-white">
        <h1 class="display-1 fw-bold mb-2" style="letter-spacing: 5px;">
            FIRMETNA
        </h1>
        <p class="fs-3 fw-bold mb-1">Gérez votre exploitation agricole avec FIRMETNA</p>
        <p class="h5 mb-5 opacity-75 italic text-warning">"De notre terre à votre table"</p>
        
        <div class="d-flex justify-content-center gap-3 mt-5">
            <a href="{{ path('app_register') }}" class="btn btn-light btn-lg px-5 rounded-pill fw-bold py-3 shadow">
                <i class="fas fa-play-circle me-2"></i>Commencer gratuitement
            </a>
            <a href="#modules" class="btn btn-outline-light btn-lg px-5 rounded-pill py-3">
                Découvrir les modules
            </a>
        </div>
        
        <!-- Statistiques stylisées (Glassmorphism) -->
        <div class="row justify-content-center mt-5 g-3">
            {% set stats = [
                {val: '500+', label: 'Agriculteurs'},
                {val: '2k+', label: 'Membres'},
                {val: '200+', label: 'Événements'},
                {val: '50k€', label: 'Dons'}
            ] %}
            {% for stat in stats %}
            <div class="col-6 col-md-2">
                <div class="p-3 rounded-4 shadow-sm border border-white border-opacity-25" style="background: rgba(255,255,255,0.1); backdrop-filter: blur(10px);">
                    <div class="h4 fw-bold mb-0 text-white">{{ stat.val }}</div>
                    <div class="small text-white text-opacity-75 fw-bold">{{ stat.label }}</div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- ========== MODULES SECTION ========== -->
<section id="modules" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5 display-5 fw-bold text-dark">
            Nos 6 Modules Principaux
        </h2>
        
        <div class="row g-4">
            {% for module in [
                { icon: 'fas fa-users', title: 'Gestion Utilisateur', desc: 'Inscription, connexion et gestion des rôles' },
                { icon: 'fas fa-calendar', title: 'Événements', desc: 'Calendrier interactif et inscriptions' },
                { icon: 'fas fa-comments', title: 'Forum', desc: 'Discussions et échanges communautaires' },
                { icon: 'fas fa-chart-line', title: 'Rapports', desc: 'Analyses et statistiques globales' },
                { icon: 'fas fa-heart', title: 'Dons', desc: 'Campagnes de collecte et soutien' },
                { icon: 'fas fa-shield-alt', title: 'Sécurité', desc: 'Protection des données et accès' }
            ] %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm hover-shadow">
                    <div class="card-body text-center p-4">
                        <i class="{{ module.icon }} fa-3x text-success mb-3"></i>
                        <h5 class="card-title fw-bold">{{ module.title }}</h5>
                        <p class="card-text text-muted">{{ module.desc }}</p>
                        <a href="#" class="btn btn-outline-success mt-2">Découvrir</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- ========== CTA SECTION ========== -->
<section class="py-5" style="background: linear-gradient(135deg, #1a4d2e, #2d5f3f);">
    <div class="container text-center text-white">
        <h2 class="display-6 fw-bold mb-4">Prêt à transformer votre gestion agricole ?</h2>
        <p class="lead mb-5">Rejoignez des centaines d'agriculteurs qui utilisent déjà FIRMETNA</p>
        
        <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
            <a href="{{ path('app_register') }}" class="btn btn-light btn-lg px-5">
                <i class="fas fa-user-plus me-2"></i>Créer un compte gratuit
            </a>
            <a href="#" class="btn btn-outline-light btn-lg px-5">
                Nous contacter
            </a>
        </div>
    </div>
</section>

{% endblock %}