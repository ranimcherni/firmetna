{% extends 'base.html.twig' %}

{% block title %}{{ info.titre }} - Dons & Aide - FIRMETNA{% endblock %}

{% block body %}
<style>
    .produit-hero {
        min-height: 100vh;
        background: linear-gradient(rgba(26, 77, 46, 0.75), rgba(26, 77, 46, 0.85)), url('{{ info.image }}') no-repeat center center;
        background-size: cover;
        background-attachment: fixed;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4rem 2rem;
        color: white;
    }
    .produit-hero-content {
        max-width: 800px;
        text-align: center;
    }
    .produit-hero h1 {
        font-size: 2.75rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        text-shadow: 0 2px 20px rgba(0,0,0,0.4);
    }
    .produit-hero .sous-titre {
        font-size: 1.25rem;
        opacity: 0.95;
        margin-bottom: 2rem;
        text-shadow: 0 1px 10px rgba(0,0,0,0.3);
    }
    .produit-hero .icon-wrap {
        width: 100px;
        height: 100px;
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        backdrop-filter: blur(10px);
        border: 3px solid rgba(255,255,255,0.4);
    }
    .produit-hero .icon-wrap i {
        font-size: 2.5rem;
    }
    .produit-card-info {
        background: rgba(255,255,255,0.97);
        border-radius: 1.5rem;
        padding: 2.5rem;
        margin-top: 2rem;
        color: #333;
        text-align: left;
        box-shadow: 0 15px 50px rgba(0,0,0,0.2);
    }
    .produit-card-info h3 {
        color: #1a4d2e;
        font-weight: 800;
        margin-bottom: 1rem;
    }
    .produit-card-info p {
        line-height: 1.7;
        margin-bottom: 1rem;
    }
    .btn-retour-dons {
        background: #1a4d2e;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s;
        border: none;
        margin-top: 1rem;
    }
    .btn-retour-dons:hover {
        background: #23613a;
        color: white;
        transform: translateY(-2px);
    }
    .btn-demander-page {
        background: linear-gradient(135deg, #22c55e, #16a34a);
        color: white;
        padding: 0.85rem 2rem;
        border-radius: 50px;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s;
        border: none;
        box-shadow: 0 4px 15px rgba(34, 197, 94, 0.4);
    }
    .btn-demander-page:hover {
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 6px 25px rgba(34, 197, 94, 0.5);
    }
</style>

<div class="produit-hero">
    <div class="produit-hero-content">
        <div class="icon-wrap">
            <i class="fas {{ info.icon }}"></i>
        </div>
        <h1>{{ info.titre }}</h1>
        <p class="sous-titre">{{ info.sous_titre }}</p>

        <div class="produit-card-info">
            <h3><i class="fas fa-info-circle me-2"></i>Pr√©sentation</h3>
            <p>{{ info.description }}</p>
            <h3><i class="fas fa-list me-2"></i>En pratique</h3>
            <p>{{ info.details }}</p>
            <div class="d-flex flex-wrap gap-3 mt-4">
                <a href="{{ path('app_donations') }}#produits-liste" class="btn btn-demander-page">
                    <i class="fas fa-hand-holding-heart me-1"></i> Voir les offres et demander
                </a>
                <a href="{{ path('app_donations') }}" class="btn btn-retour-dons">
                    <i class="fas fa-arrow-left me-1"></i> Retour aux Dons
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
