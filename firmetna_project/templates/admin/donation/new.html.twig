{% extends 'admin_base.html.twig' %}

{% block title %}Ajouter une offre de don - FIRMETNA{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_admin_donations') }}" class="text-success text-decoration-none fw-600">
        <i class="fas fa-arrow-left me-2"></i> Retour à la liste
    </a>
    <h2 class="fw-bold mt-2">Ajouter une offre de don</h2>
    <p class="text-muted">Remplissez les champs pour créer une nouvelle offre.</p>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 15px; max-width: 800px;">
    <div class="card-body p-4">
        {{ form_start(form) }}
            {{ include('admin/donation/_form.html.twig', { button_label: 'Créer l\'offre' }) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
