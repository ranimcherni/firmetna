{% extends 'admin_base.html.twig' %}

{% block title %}Ajouter un Utilisateur - Firmetna{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_admin_user_index') }}" class="text-success text-decoration-none fw-600">
        <i class="fas fa-arrow-left me-2"></i> Retour à la liste
    </a>
    <h2 class="fw-bold mt-2">Création d'un utilisateur</h2>
    <p class="text-muted">Remplissez les informations pour ajouter un nouveau membre.</p>
</div>

<div class="card border-0 shadow-sm" style="border-radius: 15px; max-width: 800px;">
    <div class="card-body p-4">
        {{ form_start(form) }}
            <div class="row g-4">
                <div class="col-md-6">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.plainPassword) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.roleType) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.statut) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.role) }}
                </div>
                <div class="col-12 mt-4">
                    <hr class="opacity-10">
                    <button type="submit" class="btn btn-success px-4 py-2" style="background-color: #1a4d2e; border: none; border-radius: 8px;">
                        <i class="fas fa-save me-2"></i> Créer l'utilisateur
                    </button>
                    <a href="{{ path('app_admin_user_index') }}" class="btn btn-light border px-4 py-2 ms-2" style="border-radius: 8px;">
                        Annuler
                    </a>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
