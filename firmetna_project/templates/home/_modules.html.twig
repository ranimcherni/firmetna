<!-- Modules Section - Version CORRECTE -->
<section id="modules" class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="display-5 fw-bold mb-3 text-dark">
                    Six modules pour une gestion complète
                </h2>
                <p class="lead text-muted">
                    Découvrez toutes les fonctionnalités de FIRMETNA pour optimiser
                    votre activité agricole.
                </p>
            </div>
        </div>

        <div class="row g-4">
            {% for module in [
                { icon: 'fas fa-users', title: 'Gestion Utilisateur', desc: 'Inscription, connexion, tableau de bord et gestion des rôles (Agriculteur, Client, Volontaire).', color: 'text-primary' },
                { icon: 'fas fa-calendar', title: 'Événements', desc: 'Calendrier interactif, publication d\'événements (foires, formations), inscription.', color: 'text-info' },
                { icon: 'fas fa-box', title: 'Produits', desc: 'Ajoutez et modifiez vos produits, gérez les stocks et assurez la traçabilité.', color: 'text-warning' },
                { icon: 'fas fa-comments', title: 'Forum', desc: 'Créez des discussions catégorisées, échangez via messages, votez et modérez.', color: 'text-success' },
                { icon: 'fas fa-chart-line', title: 'commandes', desc: 'Tableau de bord des ventes, graphiques de revenus et rapports financiers.', color: 'text-danger' },
                { icon: 'fas fa-heart', title: 'Dons', desc: 'Créez des campagnes de dons, formulaire sécurisé et suivi des collectes.', color: 'text-secondary' }
            ] %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <i class="{{ module.icon }} fa-3x {{ module.color }}"></i>
                        </div>
                        <h3 class="card-title h5 fw-bold mb-3">{{ module.title }}</h3>
                        <p class="card-text text-muted mb-4">{{ module.desc }}</p>
                        <a href="#" class="btn btn-link text-success p-0 text-decoration-none">
                            Découvrir <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>