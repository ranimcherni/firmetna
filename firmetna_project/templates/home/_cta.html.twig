<!-- CTA Section - Version adaptée pour Symfony -->
<section class="py-20" style="background: linear-gradient(135deg, #1a4d2e, #2d5f3f); color: white;">
    <div class="container px-4">
        <div class="mx-auto max-w-3xl text-center">
            <h2 class="mb-4 display-5 fw-bold">
                Prêt à transformer votre gestion agricole ?
            </h2>
            <p class="mb-8 lead opacity-75">
                Rejoignez des centaines d'agriculteurs qui utilisent déjà FIRMETNA
                pour optimiser leur activité.
            </p>

            <div class="mb-8 d-flex flex-wrap justify-content-center gap-4">
                {% for feature in [
                    'Inscription gratuite',
                    'Support dédié', 
                    'Mises à jour régulières',
                    'Données sécurisées'
                ] %}
                <div class="d-flex align-items-center gap-2 text-sm opacity-75">
                    <i class="fas fa-check-circle text-success"></i>
                    {{ feature }}
                </div>
                {% endfor %}
            </div>

            <div class="d-flex flex-column flex-sm-row justify-content-center gap-4">
                <a href="{{ path('app_user_new') }}" class="btn btn-light btn-lg px-8 fw-bold">
                    <i class="fas fa-user-plus me-2"></i>Créer un compte gratuit
                </a>
                <a href="#" class="btn btn-outline-light btn-lg px-8">
                    Nous contacter
                </a>
            </div>
        </div>
    </div>
</section>