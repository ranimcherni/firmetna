{% extends 'base.html.twig' %}

{% block title %}Connexion - Firmetna{% endblock %}

{% block stylesheets %}
<style>
    :root {
        --primary-green: #1a4d2e;
        --light-green: #e8f5e9;
        --text-dark: #111827;
        --text-muted: #6b7280;
        --white: #ffffff;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Inter', sans-serif;
        background-color: var(--white);
    }

    .split-container {
        display: flex;
        min-height: calc(100vh - 70px);
        width: 100%;
    }

    .left-side {
        flex: 1.2;
        background: linear-gradient(rgba(0, 50, 20, 0.2), rgba(0, 50, 20, 0.3)), 
                    url('https://images.unsplash.com/photo-1464226184884-fa280b87c399?auto=format&fit=crop&q=80&w=2000') no-repeat center center;
        background-size: cover;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 4rem;
        color: white;
        position: relative;
    }

    .left-side h1 {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 2rem;
        text-shadow: 0 4px 15px rgba(0,0,0,0.3);
    }

    .left-side p {
        font-size: 1.25rem;
        max-width: 500px;
        line-height: 1.6;
        opacity: 0.95;
        text-shadow: 0 2px 10px rgba(0,0,0,0.3);
    }

    .right-side {
        flex: 1;
        background-color: #fcfdfc;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 4rem;
        border-left: 1px solid #eef2ee;
    }

    .login-box {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
    }

    .login-header {
        margin-bottom: 2.5rem;
        text-align: center;
    }

    .logo-form-container {
        background-color: white;
        padding: 10px 20px;
        border-radius: 12px;
        display: inline-flex;
        align-items: center;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        margin-bottom: 1.5rem;
    }

    .form-logo {
        height: 85px;
        width: auto;
    }

    .login-header h2 {
        font-size: 2rem;
        font-weight: 800;
        color: var(--text-dark);
        margin: 0;
        text-transform: uppercase;
        letter-spacing: -0.5px;
    }

    .login-header p {
        color: var(--primary-green);
        font-size: 0.95rem;
        font-weight: 600;
        margin-top: 8px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--text-dark);
    }

    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--primary-green);
        opacity: 0.7;
    }

    .form-control {
        width: 100%;
        padding: 0.85rem 1rem 0.85rem 2.8rem;
        border: 1px solid #e2e8f0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.2s;
        box-sizing: border-box;
        background-color: #f8fafc;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-green);
        background-color: white;
        box-shadow: 0 0 0 3px rgba(0, 150, 77, 0.1);
    }

    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        font-size: 0.9rem;
    }

    .remember-me {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-muted);
        font-weight: 500;
        cursor: pointer;
    }

    .forgot-link {
        color: var(--primary-green);
        text-decoration: none;
        font-weight: 700;
    }

    .btn-submit {
        width: 100%;
        padding: 1rem;
        background-color: var(--primary-green);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(0, 150, 77, 0.2);
    }

    .btn-submit:hover {
        background-color: #007a3e;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 150, 77, 0.3);
    }

    .register-footer {
        text-align: center;
        margin-top: 2.5rem;
        color: var(--text-muted);
        font-size: 0.95rem;
        font-weight: 500;
    }

    .register-footer a {
        color: var(--primary-green);
        text-decoration: none;
        font-weight: 700;
        margin-left: 5px;
    }

    @media (max-width: 1024px) {
        .left-side { display: none; }
        .right-side { flex: 1; padding: 2rem; }
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
<div class="split-container">
    <div class="left-side">
        <h1>Cultivez votre avenir avec nous</h1>
        <p>Rejoignez la première plateforme agricole qui connecte producteurs, clients et volontaires.</p>
    </div>

    <div class="right-side">
        <div class="login-box">
            <div class="login-header">
                <div class="logo-form-container">
                    <img src="{{ asset('images/logo_hand.png') }}" alt="FIRMETNA" class="form-logo">
                </div>
                <h2>DÉJÀ MEMBRE ?</h2>
                <p>Accédez à votre espace Firmetna</p>
            </div>

            <form method="post">
                {% if error %}
                    <div style="background-color: #fee2e2; color: #dc2626; padding: 1rem; border-radius: 10px; margin-bottom: 1.5rem; font-size: 0.9rem; text-align: center; border: 1px solid #fecaca;">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope input-icon"></i>
                        <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" placeholder="votre@email.com" required autofocus>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="password">Mot de passe</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input type="password" name="password" id="password" class="form-control" placeholder="••••••••" required>
                    </div>
                </div>

                <div class="form-options">
                    <label class="remember-me">
                        <input type="checkbox" name="_remember_me" style="accent-color: var(--primary-green);"> Se souvenir de moi
                    </label>
                    <a href="#" class="forgot-link">Mot de passe oublié ?</a>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn-submit" type="submit">
                    Se connecter
                </button>
            </form>

            <div class="register-footer">
                Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire gratuitement</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
